@{
    ViewData["Title"] = "Change password Page";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="row justify-content-md-center" style="margin-top:100px; margin-bottom:100px">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Change Password
                <span class="btn ml-lg-5 bg-danger"><a asp-controller="Account" asp-action="Index">&times;</a></span>
            </div>
            <div class="card-body">
                <div class="text-danger"></div>
                <form asp-controller="Helperland" asp-action="UpdatePass" method="post">
                    <input class="form-control mt-3" type="text" value="@ViewBag.Data" name="Email" readonly /> 
                    <input class="form-control mt-3" type="password" name="password" placeholder="New password" required>
                    <input class="form-control mt-3" type="password" name="Cfrmpwd" placeholder="confirm password" required>
                    <input type="submit" value="Save" class="form-control rounded_btn mt-3" />

                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Account" asp-action="Login" class="text-primary">Bake to Login</a>
            </div>
        </div>
    </div>
</div>

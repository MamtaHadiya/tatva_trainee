@model Helperland.Models.Loginclass
@{
    ViewData["Title"] = "login Page";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="row justify-content-md-center" style="margin-top:100px; margin-bottom:100px">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Login
                <span class="btn float-lg-right bg-danger"><a asp-controller="Helperland" asp-action="Index">&times;</a></span>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Username" class="form-control mt-3" type="text" name="username" placeholder="Email Address" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <input asp-for="Password" class="form-control mt-3" type="password" name="password" placeholder="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="submit" value="login" class="form-control rounded_btn mt-3" />

                </form>
            </div>
            <div class="card-footer text-center">
                @*<a data-toggle="modal" data-target="#ForgetPass" data-dismiss="modal" class="m-auto text-primary">Forget password?</a><br />*@
                <a asp-controller="Account" asp-action="ForgotPass" class="m-auto text-primary">Forget password?</a><br />
                <p>Don't have an account?<a asp-controller="Account" asp-action="RegisterCostomer" class="text-primary">Create an account</a></p>
            </div>
        </div>
    </div>
 </div>
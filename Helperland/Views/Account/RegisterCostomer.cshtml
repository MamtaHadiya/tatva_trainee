<!--Create Account Modal -->
<form asp-action="RegisterCostomer">
    <div class="modal fade" id="CreateAccount" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content modal-lg">
                <div class="container-fluid">
                    <center>
                        <h2 class="modal-title" id="exampleModalLongTitle">Create an account</h2>
                        <div class="hr">
                            <hr>
                            <img src="~/assets/img/separator.png">
                        </div>
                    </center>
                </div>
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <input asp-for="FirstName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>
                        <div class="col-md-6 col-12">
                            <input asp-for="LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row  mt-3">
                        <div class="col-md-6 col-12">
                            <input asp-for="Email" class="form-control" placeholder="E-mail address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 input-group">
                            <span class="input-group-text">+49</span>
                            <input asp-for="Mobile" class="form-control" name="mobile" placeholder="Mobile No">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6 col-12">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12">
                            <input asp-for="Confirmpwd" class="form-control" placeholder="Confirm password" />
                            <span asp-validation-for="Confirmpwd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">I have read the <a href="">privacy policy.</a></label>
                    </div>
                </div>
                <div class="container-fluid" align="center">
                    <input type="submit" value="Register" class="register_btn m-auto" />
                    <p class="m-auto">Already registered?<a asp-action="Login" asp-controller="Account" class="text-primary">Login now</a></p>
                </div>
            </div>
        </div>
    </div>
</form>


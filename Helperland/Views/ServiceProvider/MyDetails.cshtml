@model Helperland.Models.SpProfileClass
@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http;

<form id="DetailForm" method="post" asp-action="MyDetails" asp-controller="ServiceProvider">
    <ul class="pl-4">
        <span id="ErrorFromDetails" class="text-danger"></span>
    </ul>
    <table width="100%" class="m-0 p-0">
        <tr>
            <td><h5>Basic Details</h5></td>
            <td align="right">
                <div class="avtar_image">
                    <img src="~/assets/img/@Model.UserProfilePicture" class="center_img">
                </div>
            </td>
        </tr>
    </table>
    <hr class="m-0 p-0"/>
    <div class="row m-0 p-0">
        <input class="form-control" asp-for="UserId" hidden />
        <div class="col-md-4 col-12">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-4 col-12">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-4 col-12">
            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" class="form-control" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row p-0 m-0 mt-1">
        <div class="col-md-4 col-12">
            <label asp-for="Mobile">Mobile Number</label>
            <div class="input-group">
                <span class="input-group-text">+49</span>
                <input asp-for="Mobile" type="number" class="form-control" name="mobile" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 col-12">
            <label asp-for="DateOfBirth">Date of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="col-md-4 col-12">
            <label>Nationality</label>
            <select asp-for="NationalityId" class="form-control">
                <option value="1">Indian</option>
                <option value="2">Korean</option>
            </select>
        </div>
    </div>
    <hr />
    <label>Gender</label>
    <div class="row ml-2">
        <div class="form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" value="1" />
            <label class="form-check-label mr-2">Male</label>
        </div>
        <div class="form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" value="2" />
            <label class="form-check-label mr-2">Female</label>
        </div>
        <div class="form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" value="3" />
            <label class="form-check-label mr-2">Rather Not to Say</label>
        </div>
    </div>
    <div class="form-group">
        <p>Select Avtar</p>
        <div class="avtar_selected">
            <div class="pl-2">
                <div class="avtar_image" id="Image1" onclick="AvtarClicked(this)">
                    <img src="~/assets/img/cap.png" class="center_img" id="AvtarImage1">
                </div>
            </div>
            <div class="pl-2">
                <div class="avtar_image" id="Image2" onclick="AvtarClicked(this)">
                    <img src="~/assets/img/separator.png" class="center_img" id="AvtarImage2">
                </div>
            </div>
            <div class="pl-2">
                <div class="avtar_image" id="Image3" onclick="AvtarClicked(this)">
                    <img src="~/assets/img/calendar-book-service.png" class="center_img" id="AvtarImage3">
                </div>
            </div>
            <div class="pl-2">
                <div class="avtar_image" id="Image4" onclick="AvtarClicked(this)">
                    <img src="~/assets/img/smiley.png" class="center_img" id="AvtarImage4">
                </div>
            </div>
            <div class="pl-2">
                <div class="avtar_image" id="Image5" onclick="AvtarClicked(this)">
                    <img src="~/assets/img/down-arrow.png" class="center_img" id="AvtarImage5">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        My Addresses
        <hr class="m-0 p-0" />
        <div class="m-0 p-0">

            <div class="row mt-0">
                <div class="col-md-4 col-12">
                    <label>Street name*</label>
                    <input asp-for="AddressLine1" class="form-control" id="FAddressLine1" placeholder="Street name" />

                </div>
                <div class="col-md-4 col-12">
                    <label>House number*</label>
                    <input asp-for="AddressLine2" class="form-control" id="FAddressLine2" placeholder="House number" />
                </div>
                <div class="col-md-4 col-12">
                    <label>Postal Code*</label>
                    <input asp-for="PostalCode" name="PostalCode" class="form-control" id="FZip" placeholder="Postal Code" />
                </div>
            </div>
            <div class="row  mt-1">
                <div class="col-md-4 col-12">
                    <label>City*</label>
                    <input asp-for="City" class="form-control" id="FCity" placeholder="Surat">
                </div>

            </div>
        </div>
    </div>
    <hr class="m-0 p-0" />
    <div class="form-group">
        <button onclick="SubmitDetailForm()" value="Save" class="rounded_btn px-3">Save</button>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@{
    ViewData["Title"] = "Setup Services";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="banner">
    <img src="~/assets/img/book-service-banner.jpg">
</div>


<section>
    <div class="middle_section">

        <!-- Title -->
        <div>
            <h2><b>Set up your cleaning service</b></h2>
            <div class="hr_img">
                <hr>
            </div>
        </div>


        <div class="service_section">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-12">
                        @if(null != TempData["alert"])
            {
                <script type="text/javascript">
                    alert('@TempData["alert"]');
                </script>
                            TempData.Remove("alert");
                        }
                        <ul class="nav nav-tabs menubar">
                            <li class="menulink"><a data-toggle="tab" href="#home" class="@ViewData["Disable1"]"><img src="~/assets/img/setup-service.png"> Setup Service</a></li>
                            <li class="menulink"><a data-toggle="tab" href="#menu1"><img src="~/assets/img/schedule.png"> Schedule & Plan</a></li>
                            <li class="menulink"><a data-toggle="tab" href="#menu2"><img src="~/assets/img/details.png"> Your Details</a></li>
                            <li class="menulink"><a data-toggle="tab" href="#menu3"><img src="~/assets/img/payment.png"> Make Payment</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="home" class="tab-pane fade in">
                                <h4 class="mt-3"><b>Enter your Postal Code</b></h4>
                                <form asp-controller="BookService" asp-action="SetupService" method="post">
                                    <table class="">
                                        <tr>
                                            <td width="250px"><input type="text" name="ZipCode" class="form-control" placeholder="Postal Code" maxlength="6" minlength="6" required></td>
                                            <td><input type="submit" name="" value="Check Availability" class="check_btn ml-2"></td>
                                        </tr>
                                        <tr class="text-danger">
                                            <td>@ViewBag.error</td>
                                            <td></td>
                                        </tr>
                                    </table>
                                </form>
                            </div>
                            <div id="menu1" class="tab-pane fade">
                                <div class="row my-4">
                                    <div class="col-md-6 col-12">
                                        <h5><b>when do you need the cleaner</b></h5>
                                        <form id="form1" class="form-inline" method="post" asp-action="SubmitForm1">
                                            <input id="date_picker" type="date" class="form-control mx-2" name="datevalue" required>
                                            <script language="javascript">
                                                var today = new Date();
                                                var dd = String(today.getDate() + 1).padStart(2, '0');
                                                var mm = String(today.getMonth() + 1).padStart(2, '0');
                                                var yyyy = today.getFullYear();

                                                today = yyyy + '-' + mm + '-' + dd;
                                                $('#date_picker').attr('min', today);
                                            </script>
                                            <select class="form-control" name="timevalue" onblur="Form1()">
                                                <option value="1:00 PM">1:00 PM</option>
                                                <option value="2:00 PM">2:00 PM</option>
                                                <option value="3:00 PM">3:00 PM</option>
                                                <option value="4:00 PM">4:00 PM</option>
                                                <option value="5:00 PM">5:00 PM</option>
                                            </select>
                                        </form>
                                        
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <h5 align="left"><b>How long do you need cleaner</b></h5>
                                        <form id="form2" class="form-inline" method="post" asp-action="SubmitForm2">
                                            <select class="form-control" name="Hours" onblur="Form2()">
                                                <option value="3.0">3.0 hrs</option>
                                                <option value="4.0">4.0 hrs</option>
                                                <option value="5.0">5.0 hrs</option>
                                            </select>
                                        </form>
                                        <script type="text/javascript">
                                            function Form1() {
                                                document.getElementById('form1').submit();
                                            }
                                            function Form2() {
                                                document.getElementById('form2').submit();
                                            }
                                        </script>
                                    </div>
                                </div>
                                <hr>
                                <div class="extra_service">
                                    <h5 align="left"><b>Extra services</b></h5>
                                    <div class="extra_service_selected">
                                        <div>
                                            <a asp-action="Cabinets">
                                                <div class="price_line_image">
                                                    <img src="~/assets/img/@ViewBag.image3" class="center_img">
                                                </div>
                                            </a>
                                            <p>Inside cabinets</p>
                                        </div>
                                        <div>
                                            <a asp-action="Fridge">
                                                <div class="price_line_image">
                                                    <img src="~/assets/img/@ViewBag.image5" class="center_img">
                                                </div>
                                            </a>
                                            <p>Inside fridge</p>
                                        </div>
                                        <div>
                                            <a asp-action="Oven">
                                                <div class="price_line_image">
                                                    <img src="~/assets/img/@ViewBag.image4" class="center_img">
                                                </div>
                                            </a>
                                            <p>Inside oven</p>
                                        </div>
                                        <div>
                                            <a asp-action="Laundry">
                                                <div class="price_line_image">
                                                    <img src="~/assets/img/@ViewBag.image2" class="center_img">
                                                </div>
                                            </a>
                                            <p>Laundry <br>wash & dry</p>
                                        </div>
                                        <div>
                                            <a asp-action="Windows">
                                                <div class="price_line_image">
                                                    <img src="~/assets/img/@ViewBag.image1" class="center_img">
                                                </div>
                                            </a>
                                            <p>Interior <br>windows</p>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                                <div class="comment">
                                    <h5><b>Comments</b></h5>
                                    <form>
                                        <textarea class="form-control" rows="3"></textarea>
                                        <div class="checkbox">
                                            <label><input type="checkbox" name="HavePets" required> I have pets at home</label>
                                        </div>
                                    </form>
                                    <hr>
                                </div>
                                <button class="continue_btn">Continue</button>

                            </div>
                            <div id="menu2" class="tab-pane fade">
                                <h3>Menu 2</h3>
                                <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                            </div>
                            <div id="menu3" class="tab-pane fade">
                                <h3>Menu 3</h3>
                                <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                            </div>

                        </div>
                    </div>
                    <!-- /col-md-8 -->
                    <div class="col-md-4 col-12">
                        <div class="right_section">
                            <div class="payment_summery">
                                <h4><b>Payment Summary</b></h4>
                            </div>
                            <div class="px-3">
                                @if (null != TempData["Date"] && null != TempData["Time"])
                                {
                                    <p>@TempData["Date"] at @TempData["Time"]</p>
                                }
                                <p>
                                    <span style="float: left;">Basic</span>
                                    @if (null != TempData["Hours"])
                                    {
                                        <span style="float: right;">@TempData["Hours"]</span>
                                    }
                                    else {
                                    <span style="float: right;">0 Hrs</span>
                                    }
                                    </p><br>
                                    <p><span style="float:left;"><b>Total Service Time</b></span><span style="float:right;">3 Hrs</span></p><br><hr>
                                    <p><span style="float: left;">Per cleaning</span><b><span style="float: right;">0,00 $</span></b></p><br>
                                    <hr>
                                    <h5><span style="float:left;">Total Payment</span></h5><h4><span style="float:right;">0,00 $</span></h4><br>
                                </div>
                            <div class="last_line mt-3">
                                <p>See what is always included</p>
                            </div>
                        </div>
                        <!-- /right_section -->
                        <div class="Questions">
                            <h5 align="center"><b>Questions?</b></h5>
                            <p><img src="~/assets/img/keyboard-right-arrow-button.png"> Which Helperland professional will come to my place?</p><hr>
                            <p><img src="~/assets/img/keyboard-right-arrow-button.png"> Which Helperland professional will come to my place?</p><hr>
                            <p><img src="~/assets/img/keyboard-right-arrow-button.png"> Which Helperland professional will come to my place?</p><hr>
                            <a href="#">For more help</a>
                        </div>
                    </div>
                    <!-- /col-md-4 -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <h6 class="get-our-newsletter"><b>GET OUR NEWSLETTER</b></h6>
        <span>
            <button class="email_btn">YOUR EMAIL</button>
            <button class="submit_btn">submit</button>
        </span>

    </div>
</section>